// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Parcel {
  id BigInt @id @default(autoincrement())
  handleId String
  image String?
  address String?
  square Float
  price Int?
  ownerAddress  String?
  owner User? @relation(fields: [ownerId], references: [id])
  ownerId BigInt?
  contractAddress String?
  tokenId String
  status PropertyStatus @default(UNMINTED)
}
enum PropertyStatus {
  UNMINTED
  OWNED
  ONSALE
  SECURING
}
model User {
  id BigInt @id @default(autoincrement())
  wallet String
  username String
  email String
  password String
  key Key?
  parcels Parcel[]
}
model Key {
  id BigInt @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id])
  userId BigInt @unique
  pkey String
}